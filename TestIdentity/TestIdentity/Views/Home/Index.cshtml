@model  List<TestIdentity.Models.PersonalInfoViewModel>

@{
    ViewBag.Title = "Home Page";
}

    @section styles {        
         <!-- BEGIN PAGE LEVEL PLUGINS -->
        <link href="~/Content/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
        <!-- END PAGE LEVEL PLUGINS -->                
        <link href="~/Content/arrows.css" rel="stylesheet" type="text/css" />   
        }
<div ng-controller="studentController">   
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div id="sample_1_wrapper" class="dataTables_wrapper no-footer">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div class="dataTables_length" id="sample_1_length">
                                    <label>
                                        Show
                                        <select name="sample_1_length" 
                                                aria-controls="sample_1" 
                                                class="form-control input-sm input-xsmall input-inline"
                                                ng-model="recordsPerPage"
                                                ng-options='option.value as option.name for option in typeOptions'
                                                ng-change="changePageSize()">
                                           
                                            
                                        </select>
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div id="sample_1_filter" class="dataTables_filter">
                                    <label>Search:
                                    <input type="search" 
                                           class="form-control input-sm input-small input-inline" 
                                           placeholder="Search" aria-controls="sample_1" 
                                           ng-change="searchFor()" 
                                           ng-model="search" 
                                           name="search">
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="table-scrollable">
                            <table class="table table-striped 
                                   table-bordered table-hover 
                                   table-checkable order-column 
                                   dataTable no-footer">
                                <thead>
                                    <tr class="sortable" role="row">

                                        <th ng-click="sort('Name')" 
                                            ng-class='sortClass("Name")'>
                                              Name
                                        </th>

                                        <th ng-click="sort('LastName')"
                                            ng-class='sortClass("LastName")'>
                                     
                                            Last Name 
                                        </th>

                                        <th ng-click="sort('Email')" 
                                            ng-class='sortClass("Email")'>
                                               Email
                                        </th>

                                        <th ng-click="sort('BirthDate')">
                                           
                                            Birthday
                                        </th>

                                        <th  ng-click="sort('RegistrationDate')">
                                           
                                            Register date
                                        </th>

                                        <th ng-click="sort('StudyDate')">
                                            
                                            Study date
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="i in data" class="gradeX odd">

                                        <td>
                                            {{i.Name}}
                                        </td>
                                        <td>
                                            {{i.LastName}}
                                        </td>
                                        <td>
                                            <a ng-href="mailto:{{ i.Email }}" target="_blank">
                                                {{ i.Email }}
                                            </a>
                                           
                                        </td>

                                        <td>
                                            {{i.BirthDate | date : "dd.MM.y"}}
                                        </td>

                                        <td class="center">
                                            {{i.RegistrationDate | date:"yyyy-MM-dd HH:mm:ss" }}
                                        </td>

                                        <td class="center" ng-if ="i.StudynDate != null">
                                            {{i.StudynDate   | date: "dd.MM.y"}}
                                        </td>
                                        <td class="center" ng-if="i.StudynDate == null">
                                            <span class="label label-sm label-warning"> Not Selected </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="row">
                            <div class="col-md-5 col-sm-5">
                                <div class="dataTables_info" 
                                     id="sample_1_info" 
                                     role="status" 
                                     aria-live="polite">Showing {{recordsPerPage}} of {{totalItems}}  records
                                </div>
                            </div>

                            <div class="col-md-7 col-sm-7">
                                <ul uib-pagination total-items="totalItems" 
                                    ng-model="currentPage" ng-change="pageChanged()" 
                                    data-max-size="NumberOfPageButtons" class="pagination-large" 
                                    data-boundary-links="true" data-rotate="false" 
                                    data-items-per-page="recordsPerPage"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
      
    </div>
    @section scripts{
       
         <!-- BEGIN PAGE LEVEL PLUGINS -->
<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<!-- END PAGE LEVEL PLUGINS -->

         <!-- BEGIN PAGE LEVEL SCRIPTS -->
<script src="~/Content/assets/pages/scripts/table-datatables-managed.min.js" type="text/javascript"></script>
<!-- END PAGE LEVEL SCRIPTS -->
  }





