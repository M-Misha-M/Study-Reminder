

@model  List<TestIdentity.Models.PersonalInfoModel>

@{
    ViewBag.Title = "Home Page";
}

    @section styles {        
         <!-- BEGIN PAGE LEVEL PLUGINS -->
        <link href="~/Content/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
        <link href="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
        <!-- END PAGE LEVEL PLUGINS -->      
        }


<div ng-controller="entityController">
    
    <div class="row">

        <div class="col-md-12">

            <div class="portlet light bordered">

                <div class="portlet-body">

                    <div id="sample_1_wrapper" class="dataTables_wrapper no-footer">
                        <div class="row">
                            <div class="col-md-6 col-sm-6">
                                <div id="sample_1_filter" class="dataTables_filter">
                                    <label>Search:
                                    <input type="search" class="form-control input-sm input-small input-inline" placeholder="Search" aria-controls="sample_1" ng-change="searchFor()" ng-model="search" name="search">
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="table-scrollable">
                            <table class="table table-striped table-bordered table-hover table-checkable order-column dataTable no-footer">
                                <thead>
                                    <tr role="row">

                                        <th ng-click="sort('Name')" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Username : activate to sort column descending" style="width: 254px;">
                                            Name
                                        </th>

                                        <th ng-click="sort('LastName')" class="sorting" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label="Email : activate to sort column ascending" style="width: 372px;"> Last Name </th>

                                        <th ng-click="sort('Email')" class="sorting" tabindex="0" aria-controls="sample_1" rowspan="1" colspan="1" aria-label="Email : activate to sort column ascending" style="width: 208px;">
                                            Email
                                        </th>


                                        <th ng-click="sort('Age')" style="width:199px">
                                            Birthday
                                        </th>

                                        <th style="width:203px">
                                            Register date
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="i in data|orderBy:sortKey:reverse" class="gradeX odd">

                                        <td>
                                            {{i.Name}}
                                        </td>
                                        <td>
                                            {{i.LastName}}
                                        </td>
                                        <td>
                                            <a ng-href="mailto:{{ i.Email }}" target="_blank">
                                                {{ i.Email }}
                                            </a>
                                           
                                        </td>

                                        <td>
                                            {{i.Age | date :  "dd.MM.y"}}
                                        </td>

                                        <td class="center">
                                            {{i.RegistrationDate | date:"yyyy-MM-dd HH:mm:ss" }}
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>

                        <div class="row">
                            <div class="col-md-5 col-sm-5">
                                <div class="dataTables_info" id="sample_1_info" role="status" aria-live="polite">Showing {{recordsPerPage}}  of 25 records
                                </div>
                            </div>

                            <div class="col-md-7 col-sm-7">
                                <ul uib-pagination total-items="totalItems" ng-model="currentPage" ng-change="pageChanged()" data-max-size="NumberOfPageButtons" class="pagination-large" data-boundary-links="true" data-rotate="false" data-items-per-page="recordsPerPage"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


   
  

      
          
        
    </div>
    @section scripts{
       
         <!-- BEGIN PAGE LEVEL PLUGINS -->
<script src="~/Content/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<!-- END PAGE LEVEL PLUGINS -->

         <!-- BEGIN PAGE LEVEL SCRIPTS -->
<script src="~/Content/assets/pages/scripts/table-datatables-managed.min.js" type="text/javascript"></script>
<!-- END PAGE LEVEL SCRIPTS -->
  }





